@model IEnumerable<CodebitsBlog.ViewModels.PostViewModel>
@using Microsoft.AspNetCore.Identity
@inject CodebitsBlog.Helpers.UtilityService utilityService

@{
    var profileImagesRootPath = utilityService.GetProfileImagesRootPath(operationType: false);
    var userProfileImagePath = profileImagesRootPath + "/" ;
}

<section id="hero-slider" class="hero-slider">
    <div class="container-md" data-aos="fade-in">
        <div class="row">
            <div class="col-12">
                <div class="swiper sliderFeaturedPosts">
                    <div class="swiper-wrapper">
                        @{
                            foreach (var post in Model)
                            {
                                <div class="swiper-slide">
                                    <a href="#" class="img-bg d-flex align-items-end" style="background-image: url(@Url.Content(userProfileImagePath + post.CoverImageUrl));">
                                        <div class="img-bg-inner">
                                            <h2>@post.Title</h2>
                                            <p>@Html.Raw(@post.PostExtract)</p>
                                        </div>
                                    </a>
                                </div>
                            }
                        }
                    </div>
                    <div class="custom-swiper-button-next">
                        <span class="bi-chevron-right"></span>
                    </div>
                    <div class="custom-swiper-button-prev">
                        <span class="bi-chevron-left"></span>
                    </div>

                    <div class="swiper-pagination"></div>
                </div>
            </div>
        </div>
    </div>
</section>