@model AdminPostViewModel

@{
    ViewData["Title"] = "Add Post";
}


<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">Add Post</h1>

    <div class="row">
        <div class="col-md-7">
            <div asp-validation-summary="ModelOnly"></div>

            <form asp-area="admin" asp-controller="dashboard" asp-action="addpost" method="post" class="user" enctype="multipart/form-data">

                <div class="form-group">
                    <input type="text" asp-for="Title" placeholder="Enter post title" class="form-control form-control-user" />
                    <span asp-validation-for="Title"></span>
                </div>

                <div class="form-group">
                    <textarea type="text" class="form-control form-control-user"
                              id="exampleInputEmail" aria-describedby="emailHelp"
                              placeholder="Enter post body here..." asp-for="Body" style="resize:none; height: 300px; border-radius:10px; visibility:hidden"></textarea>
                    <span asp-validation-for="Body"></span>
                </div>

                <div class="form-group">
                    <select asp-for="CategoryId" class="form-control">
                        <option value="">Select post category</option>
                            @foreach (var category in Model.Categories)
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                    </select>
                    <span asp-validation-for="CategoryId"></span>
                </div>
                <div class="form-group">
                    <h5>Feature this post?</h5>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="IsFeatured" value="true" id="flexRadioDefault1">
                        <label class="form-check-label" for="flexRadioDefault1">
                            Yes
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="IsFeatured" value="false" id="flexRadioDefault2">
                        <label class="form-check-label" for="flexRadioDefault2">
                            No
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="PostCoverUrl" class="btn btn-info btn-user btn-block">
                        <i class="fab fa-camera fa-fw"></i> Upload Post Cover Image
                    </label>

                    <input type="file" style="display:none" class="form-control form-control-user" id="PostCoverUrl"
                           placeholder="Upload Profile Picture" asp-for="CoverImage">
                    <span asp-validation-for="CoverImage" class="text-danger"></span>
                </div>

                <input type="hidden" value="@Model.UserId" asp-for="UserId" />

                <input type="submit" value="Add Post" class="btn btn-primary btn-user btn-block" />

            </form>
        </div>
    </div>
    <hr>

</div>